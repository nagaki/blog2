---
import { getCollection } from "astro:content"
import Layout from "../layouts/Layout.astro"
import { groupByYear } from "@utils/common"
import Lists from "@components/Lists.astro"

const allDiaries = await getCollection("diary")
const allPaints = await getCollection("paint")
const allPractices = await getCollection("practice")

const posts = groupByYear([...allDiaries, ...allPaints, ...allPractices])
---

<Layout title="ALLAURMONO" description="ひびのできごとなどをたまにかきます">
  <main class="content home">
    <h1>home</h1>
    <Lists posts={posts} />
  </main>
</Layout>
